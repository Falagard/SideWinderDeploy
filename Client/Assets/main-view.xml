<vbox percentWidth="100" percentHeight="100">
    <hbox id="rootContent" percentWidth="100" percentHeight="100">
        <!-- Primary navigation -->
        <vbox id="primaryNav" width="140" styleName="primary-nav">
            <treeview id="primaryNavList" width="140" height="300" />
        </vbox>
        <!-- Secondary item list for selected category -->
        <vbox id="secondaryPane" width="190" styleName="secondary-pane">
            <hbox id="secondaryActions" styleName="secondary-actions">
                <button id="createItemBtn" text="New" />
                <button id="refreshBtn" text="Refresh" />
            </hbox>
            <treeview id="itemList" width="190" height="400" />
            <label id="itemStatusLabel" text="" styleName="itemStatusLabel" />
        </vbox>
        <!-- Main content tabs -->
        <tabview id="contentTabs" percentWidth="100" percentHeight="100" styleName="content-tabs">
            <vbox id="overviewTab" text="Overview">
                <label text="Overview placeholder" />
            </vbox>
            <vbox id="variablesTab" text="Variables" />
            <vbox id="deploymentsTab" text="Deployments" />
        </tabview>
        <!-- Placeholder content for Machines and Environments -->
        <vbox id="detailsPlaceholder" percentWidth="100" percentHeight="100" visible="false" styleName="details-placeholder">
            <label id="detailsPlaceholderText" text="Select an item to view details" styleName="placeholderText" />
        </vbox>
    </hbox>
    <vbox id="toastContainer" width="320" styleName="toastContainer" />
</vbox>