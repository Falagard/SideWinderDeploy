<dialog id="createMachineDialog" width="420" styleName="createMachineDialog" closable="true" buttons="none">
  <hbox id="nameRow">
    <label id="nameLbl" text="Name:" width="80" />
    <textfield id="nameField" width="250" placeholder="Machine name" />
  </hbox>
  <label id="rolesLbl" text="Roles (comma-separated):" />
  <textfield id="rolesField" percentWidth="100" placeholder="e.g., web-server, database" />
  <label id="environmentsLbl" text="Environment IDs (comma-separated):" />
  <textfield id="environmentsField" percentWidth="100" placeholder="e.g., 1, 2, 3" />
  <label id="errorLabel" styleName="errorLabel" visible="false" />
  <hbox id="savingRow" percentWidth="100" visible="false" styleName="topSpacing">
    <label id="savingLbl" text="Saving..." width="80" />
    <progress id="savingSpinner" indeterminate="true" percentWidth="100" />
  </hbox>
  <hbox id="actions" percentWidth="100">
    <button id="createBtn" text="Create" />
    <button id="cancelBtn" text="Cancel" />
  </hbox>
</dialog>
