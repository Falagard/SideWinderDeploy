<dialog id="createEnvironmentDialog" width="420" styleName="createEnvironmentDialog" closable="true" buttons="none">
  <hbox id="nameRow">
    <label id="nameLbl" text="Name:" width="80" />
    <textfield id="nameField" width="250" placeholder="Environment name" />
  </hbox>
  <label id="errorLabel" styleName="errorLabel" visible="false" />
  <hbox id="savingRow" percentWidth="100" visible="false" styleName="topSpacing">
    <label id="savingLbl" text="Saving..." width="80" />
    <progress id="savingSpinner" indeterminate="true" percentWidth="100" />
  </hbox>
  <hbox id="actions" percentWidth="100">
    <button id="createBtn" text="Create" />
    <button id="cancelBtn" text="Cancel" />
  </hbox>
</dialog>
