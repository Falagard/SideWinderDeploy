<dialog id="projectVariableDialog" width="400" styleName="variableFormDialog" closable="true" buttons="none">
  <vbox id="contentBox" percentWidth="100">
  <hbox id="nameRow" percentWidth="100">
      <label id="nameLabel" text="Name:" width="110" />
  <textfield id="nameField" percentWidth="100" />
    </hbox>
  <hbox id="valueRow" percentWidth="100" styleName="topSpacing">
      <label id="valueLabel" text="Default Value:" width="110" />
  <textfield id="valueField" percentWidth="100" />
    </hbox>
    <label id="errorLabel" visible="false" styleName="errorLabel" />
    <hbox id="savingRow" percentWidth="100" visible="false" styleName="topSpacing">
      <label id="savingLbl" text="Saving..." width="110" />
      <progress id="savingSpinner" indeterminate="true" percentWidth="100" />
    </hbox>
  <hbox id="actions" percentWidth="100" styleName="topSpacing">
      <button id="saveBtn" text="Save" />
      <button id="cancelBtn" text="Cancel" />
    </hbox>
  </vbox>
</dialog>
