<vbox id="createReleaseForm" width="420" styleName="createReleaseForm">
  <label id="headerLabel" text="Create Release" styleName="formHeader" />
  <hbox id="versionRow" percentWidth="100">
    <label id="versionLbl" text="Version:" width="80" />
    <textfield id="versionField" width="100" placeholder="e.g. 1.0.3" />
  </hbox>
  <label id="notesLbl" text="Notes:" />
  <!-- Wrapper added so dialog height accounts for textarea (fixes overlap) -->
  <vbox id="notesWrapper" width="380" height="80">
    <textarea id="notesField" percentWidth="100" percentHeight="100" placeholder="Changes, highlights..." />
  </vbox>
  <label id="errorLabel" styleName="errorLabel" visible="false" />
  <hbox id="createActions" percentWidth="100" styleName="topSpacing">
    <button id="createBtn" text="Create" />
    <button id="cancelBtn" text="Cancel" />
  </hbox>
</vbox>
